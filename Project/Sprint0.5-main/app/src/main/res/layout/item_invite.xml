<?xml version="1.0" encoding="utf-8"?>
<!-- Formats the each invitation item into a linear format. -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="?attr/colorOnPrimary"
    android:elevation="2dp"
    android:clipToOutline="true"
    android:layout_marginHorizontal="4dp">

    <TextView
        android:id="@+id/inviteCircleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circle Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/inviteFromEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invited by: user@example.com"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#333333"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/acceptInviteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />

        <Button
            android:id="@+id/declineInviteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorPrimary"
            android:backgroundTint="?attr/colorOnPrimary"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />

    </LinearLayout>
</LinearLayout>
