<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textExpenseName"
        android:text="Budget Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textExpenseAmount"
        android:text="Budget Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textExpenseCategory"
        android:text="Budget Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textExpenseDate"
        android:text="Budget Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>