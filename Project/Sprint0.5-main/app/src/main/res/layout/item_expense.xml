<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textExpenseName"
            android:fontFamily="@font/montserrat_regular"
            android:text="Expense Name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/textExpenseAmount"
            android:fontFamily="@font/montserrat_regular"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="?attr/colorOnPrimary"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categoryText"
            android:text="Category: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textExpenseCategory"
            android:text="Expense Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateText"
            android:text="Start Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textExpenseDate"
            android:text="Expense Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notesText"
            android:text="Notes: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textExpenseNotes"
            android:text="Expense Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

</LinearLayout>