<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fillViewport="true"
    tools:context=".view.DashboardFragment">

    <!-- Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="true">

        <TextView
            android:id="@+id/dashboardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dashboard"
            android:padding="2dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorOnPrimary"
            tools:text="Dashboard" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:app = "http://schemas.android.com/apk/res-auto">

            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_person_24"
                android:contentDescription="@string/app_name"
                android:padding="0dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true"
                android:clickable="true" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/themeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Dark Mode"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toStartOf="@+id/btnProfile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="?attr/colorOnPrimary"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="8dp"
            android:paddingVertical="8dp"
            android:minHeight="0dp" />

        <!-- Total Spent Label -->
        <TextView
            android:id="@+id/textTotalSpent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spent (All Time): $0.00"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            tools:text="Total Spent: $126.75" />

        <!-- Total Remaining Label -->
        <TextView
            android:id="@+id/textTotalRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining This Cycle: $0.00"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            tools:text="Remaining This Cycle: $560.00" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartTotals"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <!-- RecyclerView for Remaining Budgets -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:elevation="6dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRemainingBudgets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/item_remaining_budget" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>