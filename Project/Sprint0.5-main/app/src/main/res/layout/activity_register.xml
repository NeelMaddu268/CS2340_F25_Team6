<?xml version="1.0" encoding="utf-8"?>
<!--
  Non-visual refactor:
  - Added accessibility, autofill, and focus-order hints
  - Added tools: preview-only values
  - Removed no-op ConstraintLayout attributes (this layout is a LinearLayout)
  - Explicitly set defaults (no visual change)
  - Added comments for maintainability
  - Kept all visual metrics (sizes, colors, padding, fonts) identical
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp"
    android:fitsSystemWindows="false"
    android:duplicateParentState="false"
    tools:context=".view.RegisterActivity"
    tools:targetApi="r">

        <!-- App Logo (preview-only src/tint kept; runtime identical) -->
        <ImageView
            android:id="@+id/appLogo3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/wallet_icon_desc"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="yes"
            android:importantForAutofill="no"
            android:scaleType="fitCenter"
            android:keepScreenOn="false"
            android:adjustViewBounds="true"
            android:src="@drawable/animated_logo"
            tools:ignore="VectorPath,ContentDescription"
            tools:src="@drawable/animated_logo"
            tools:tint="#357DED" />

        <!-- Title -->
        <TextView
            android:id="@+id/createAccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/create_account"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#357DED"
            android:fontFamily="@font/montserrat_regular"
            android:includeFontPadding="true"
            android:letterSpacing="0"
            android:ellipsize="none"
            android:breakStrategy="simple"
            android:hyphenationFrequency="none"
            android:importantForAccessibility="yes"
            android:labelFor="@id/creatorEmail"
            tools:text="Create Account" />

        <!-- Email -->
        <EditText
            android:id="@+id/creatorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:autofillHints="emailAddress"
            android:importantForAutofill="yes"
            android:gravity="center"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20sp"
            android:includeFontPadding="true"
            android:ems="10"
            android:ellipsize="none"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:scrollHorizontally="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/password"
            android:nextFocusDown="@id/password"
            android:privateImeOptions=""
            tools:text="user@example.com" />

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:autofillHints="password"
            android:importantForAutofill="yes"
            android:gravity="center"
            android:hint="@string/Password_Text"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:inputType="textPassword"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20sp"
            android:includeFontPadding="true"
            android:ems="10"
            android:ellipsize="none"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:imeOptions="actionDone"
            android:nextFocusForward="@id/btnCreateAccount"
            android:nextFocusDown="@id/btnCreateAccount"
            android:privateImeOptions=""
            tools:text="••••••••" />

        <!-- Create Account Button -->
        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/create_account"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_regular"
            android:backgroundTint="#357DED"
            android:contentDescription="@string/create_account"
            android:importantForAccessibility="yes"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Error Text (hidden by default) -->
        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#fc0303"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20sp"
            android:visibility="gone"
            android:importantForAccessibility="yes"
            android:contentDescription="@string/error_message_goes_here"
            tools:text="Invalid email or password"
            tools:visibility="visible" />

        <!-- Have an account? -->
        <TextView
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/already_have_an_account"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="15sp"
            android:includeFontPadding="true"
            android:letterSpacing="0"
            android:ellipsize="none"
            android:breakStrategy="simple"
            android:hyphenationFrequency="none"
            android:labelFor="@id/btnLogin"
            tools:text="Already have an account?" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/Login_Text"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_regular"
            android:backgroundTint="#357DED"
            android:contentDescription="@string/Login_Text"
            android:importantForAccessibility="yes"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="TouchTargetSizeCheck" />

        <!--
          Preview-only helpers (no runtime effect):
          - tools:text above ensures layout previews are legible
          - Explicit default flags clarify intent without changing visuals
          - Accessibility/autofill hints aid UX with no style change
        -->

</LinearLayout>
