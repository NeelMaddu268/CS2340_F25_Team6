<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BudgetCreation"
    android:orientation="vertical"
    android:background="#357DED">

    <TextView
        android:id="@+id/budgetCreationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget Creation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/createBudgetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Budget"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textColor="#357DED"
        android:layout_marginTop="17dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/budgetCreationTitle"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textColor="#357DED"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="37dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/createBudgetButton"/>

</LinearLayout>