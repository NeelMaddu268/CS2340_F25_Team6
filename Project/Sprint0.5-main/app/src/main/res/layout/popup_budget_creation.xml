<?xml version="1.0" encoding="utf-8"?>
<!-- A pop-up that allows the user to create a new budget. -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/budgetCreationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget Creation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BudgetNameEntry"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#357DED"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BudgetAmountEntry"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BudgetFrequencyEntry"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:spinnerMode="dropdown"
        android:prompt="@string/select_frequency"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BudgetCategoryEntry"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/BudgetDateEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:background="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:focusable="false"
        android:clickable="true"
        android:hint="Select Date" />

    <Button
        android:id="@+id/createBudgetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Create Budget"
        android:backgroundTint="?attr/colorOnPrimary"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/BudgetDateEntry" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="?attr/colorOnPrimary"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/createBudgetButton" />

</LinearLayout>