<?xml version="1.0" encoding="utf-8"?>
<!-- The savings circle details screen which contains the relevant details for the specific group. -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/goalComplete"
                android:layout_width="wrap_content"
                android:text="GOAL COMPLETE"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="#3db85d"
                android:visibility="gone"
                android:layout_gravity="end"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupChallengeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/groupChallengeGoalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="2dp"
                android:layout_gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupCreationTitle"
                android:text="Created on: "
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/groupCreationTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupJoinedTitle"
                android:text="Joined on: "
                android:textStyle="italic"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/groupJoinedTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupEndingTitle"
                android:text="Ending on: "
                android:textStyle="italic"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/groupEndingTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupFrequencyTitle"
                android:text="Frequency: "
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupFrequencyTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/groupNotesTextView"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupEmailTitle"
                android:text="Group Members: "
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupEmailTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupContributionsTitle"
                android:text="Contribs: "
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupContributionsTextView"
                android:layout_width="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/statusLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorOnPrimary"
            android:paddingTop="2dp"
            android:paddingBottom="8dp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/inviteEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColorHint="?attr/colorOnPrimary"
            android:hint="Enter email to invite"
            android:inputType="textEmailAddress"
            android:layout_marginTop="250dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/inviteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="@font/montserrat_regular"
            android:backgroundTint="?attr/colorOnPrimary"
            android:text="Send Invite"
            android:layout_marginTop="8dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:text="Back"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorPrimary"
            android:backgroundTint="?attr/colorOnPrimary"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/deleteCircleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Circle"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="#fc0303"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:visibility="gone"/>


    </LinearLayout>
</ScrollView>