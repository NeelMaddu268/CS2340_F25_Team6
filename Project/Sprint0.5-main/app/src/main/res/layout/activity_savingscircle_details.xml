<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#357DED"
    tools:ignore="ContentDescription">

    <!-- Root vertical container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Group name -->
        <TextView
            android:id="@+id/groupNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            tools:text="Group Name" />

        <!-- Challenge title + goal row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupChallengeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                tools:text="Challenge Title" />

            <TextView
                android:id="@+id/groupChallengeGoalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                tools:text="Goal" />
        </LinearLayout>

        <!-- Group members row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Group Members: "
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:id="@+id/groupEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                tools:text="member1@example.com, member2@example.com" />
        </LinearLayout>

        <!-- Frequency row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupFrequencyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Frequency: "
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:id="@+id/groupFrequencyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                tools:text="Weekly" />
        </LinearLayout>

        <!-- Notes -->
        <TextView
            android:id="@+id/groupNotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_regular"
            tools:text="Additional notes about this group challenge go here." />

        <!-- Invite input -->
        <EditText
            android:id="@+id/inviteEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:hint="Enter email to invite"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_regular"
            tools:text="test@example.com" />

        <!-- Send invite button -->
        <Button
            android:id="@+id/inviteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:text="Send Invite"
            android:textColor="#357DED"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Back button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Back"
            android:textColor="#357DED"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_regular" />

        <!-- Delete circle button (initially hidden) -->
        <Button
            android:id="@+id/deleteCircleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:text="Delete Circle"
            android:textColor="@color/white"
            android:backgroundTint="#E53935"
            android:fontFamily="@font/montserrat_regular"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>

