<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#357DED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/groupNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupChallengeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/groupChallengeGoalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="2dp"
                android:layout_gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupFrequencyTitle"
                android:text="Frequency: "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupFrequencyTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/groupNotesTextView"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupCreationTitle"
                android:text="Created on: "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/groupCreationTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupJoinedTitle"
                android:text="Joined on: "
                android:textStyle="italic"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/groupJoinedTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupEmailTitle"
                android:text="Group Members: "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupEmailTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/groupContributionsTitle"
                android:text="Contributions: "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/groupContributionsTextView"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/inviteEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textColorHint="@color/white"
            android:hint="Enter email to invite"
            android:inputType="textEmailAddress"
            android:layout_marginTop="380dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/inviteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#357DED"
            android:fontFamily="@font/montserrat_regular"
            android:backgroundTint="@color/white"
            android:text="Send Invite"
            android:layout_marginTop="8dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:text="Back"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#357DED"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>