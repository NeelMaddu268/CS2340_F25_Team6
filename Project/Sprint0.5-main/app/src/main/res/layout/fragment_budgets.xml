<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/budgets_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BudgetsFragment"
    android:orientation="vertical"
    android:padding="16dp"

    android:background="#357DED">

    <TextView
        android:id="@+id/budgetsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/budgets"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/addBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="@string/add_budget"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:textColor="#357DED"
        app:layout_constraintTop_toBottomOf="@id/budgetsTitle" />

</LinearLayout>