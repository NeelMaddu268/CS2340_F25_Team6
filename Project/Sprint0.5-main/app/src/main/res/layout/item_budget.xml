<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:background="#357DED">

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textBudgetName"
            android:text="Budget Name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#357DED"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/textBudgetAmount"
            android:text="Budget Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <TextView
        android:fontFamily="@font/montserrat_regular"
        android:id="@+id/textBudgetFrequency"
        android:text="Budget Frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#357DED"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/categoryText"
            android:text="Category: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
        <TextView
            android:id="@+id/textBudgetCategory"
            android:text="Budget Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
    </LinearLayout>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dateText"
            android:text="Start Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
        <TextView
            android:id="@+id/textBudgetDate"
            android:text="Budget Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
    </LinearLayout>

    <LinearLayout
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lastWeekBudgetTitle"
            android:text="Last week you were "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
        <TextView
            android:id="@+id/lastWeekBudgetText"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#357DED"/>
    </LinearLayout>

</LinearLayout>