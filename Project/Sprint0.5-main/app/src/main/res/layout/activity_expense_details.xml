<?xml version="1.0" encoding="utf-8"?>
<!-- The expense details  screen showcasing the details of the specific expense. -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/expenseNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/expenseAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/expenseCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Category: "
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/expenseCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/expenseDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/expenseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="?attr/colorOnPrimary"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/expenseNotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="?attr/colorPrimary"
            android:backgroundTint="?attr/colorOnPrimary"
            android:text="Back"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

</ScrollView>