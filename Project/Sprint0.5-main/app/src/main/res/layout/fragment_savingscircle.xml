<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/savings_circle_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SavingsCircleFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#357DED">


    <TextView
        android:id="@+id/savings_circle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Savings Circle"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savingsCircleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/addGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Group"
        android:layout_marginHorizontal="24sp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#357DED"
        app:layout_constraintTop_toBottomOf="@id/savings_circle_text" />
</LinearLayout>