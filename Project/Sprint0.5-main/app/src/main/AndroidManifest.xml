<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SelectedPhotoAccess">

    <!-- for android 12 and below -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- for android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SprintProject"
        tools:targetApi="31">

        <activity android:name=".ui.chat.ChatActivity" android:exported="false" />

        <activity android:name=".view.BudgetsFragment" android:exported="false" />
        <activity android:name=".view.ExpensesFragment" android:exported="false" />
        <activity android:name=".view.LoginActivity" android:exported="true" />
        <activity android:name=".view.RegisterActivity" android:exported="true" />
        <activity android:name=".view.MainActivity" android:exported="true"
            android:theme="@style/Theme.SprintProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SavingsCircleFragment" android:exported="false" />
        <activity android:name=".view.ChatbotFragment" android:exported="false" />
        <activity android:name=".view.AppActivity" android:exported="true" />
        <activity android:name=".view.BudgetDetailsActivity" android:exported="false" />
        <activity android:name=".view.ExpenseDetailsActivity" android:exported="false" />
        <activity android:name=".view.SavingsCircleDetailsActivity" />
        <activity android:name=".view.ProfileActivity" />

    </application>

</manifest>